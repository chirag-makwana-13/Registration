                <td>
                    <%=data[i].mobileno%>
                </td>
                <td>
                    <%=data[i].email%>
                </td>
                <td>
                    <%=data[i].dob%>
                </td>
                <td>
                    <%=data[i].city%>
                </td>
                <td>
                    <%=data[i].address%>
                </td>
                <td>
                    <%=data[i].parentno%>
                </td>
                <td>
                    <%=data[i].country%>
                </td>
            </tr>
            <%}%>
